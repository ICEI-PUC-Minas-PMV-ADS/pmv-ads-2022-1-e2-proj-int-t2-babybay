@model app_babybay.Models.Usuario

@{
	ViewData["Title"] = "Meu Guarda-Roupas";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
<link rel="stylesheet" type="text/css" href="~/css/style-guarda-roupa.css">
<link rel="stylesheet" href="~/css/template-style.css">
<link rel="stylesheet" href="~/css/card-style.css">
<main>
	<div class="Container">
		<h2>
			Guarda-Roupa de @User.Identity.Name<br /><br />
			<a class="retornar" asp-action="Index" asp-controller="Usuarios">Voltar</a>

		</h2>
		<div class="container-gr">
			<ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
				<li class="nav-item" role="presentation">
					<button class="nav-link active" id="home-tab" data-bs-toggle="tab" data-bs-target="#home" type="button" role="tab" aria-controls="home" aria-selected="true">Minhas Roupas</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="profile-tab" data-bs-toggle="tab" data-bs-target="#profile" type="button" role="tab" aria-controls="profile" aria-selected="false">Meus Anúncios</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact" type="button" role="tab" aria-controls="contact" aria-selected="false">Propostas de troca</button>
				</li>
				<li class="nav-item" role="presentation">
					<button class="nav-link" id="cad-tab" data-bs-toggle="tab" data-bs-target="#cad" type="button" role="tab" aria-controls="cad" aria-selected="false">Cadastrar Roupa</button>
				</li>
			</ul>
			<div class="tab-content" id="myTabContent">
				<div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
					<div class="cards">
						@foreach (var item in Model.Produtos)
						{
							<div class="card">
								<img class="card-image" src="@Url.Action("Render", "Produtos", new { idProduto = item.Id })" />
								<div class="card-infos">
									<div class="card-description">
										<h2>@Html.DisplayFor(modelItem => item.Nome)</h2>
										<p>@Html.DisplayFor(modelItem => item.Cor), @Html.DisplayFor(modelItem => item.Descricao)<p>
										<p class="idade">@Html.DisplayFor(modelItem => item.Idade)</p>
									</div>
								</div>
								<a class="btn-editar" asp-controller="Produtos" asp-action="MenuProduto" asp-route-id="@item.Id">Ver Produto</a>
							</div>
						}
					</div><!--.cards-->
				</div><!--primeira-tab-->
				<div class="tab-pane fade" id="profile" role="tabpanel" aria-labelledby="profile-tab">
					<div class="cards">
						@foreach (var item in Model.Anuncios)
						{
							<div class="card">
								<img class="card-image" src="@Url.Action("Render", "Produtos", new { idProduto = item.ProdutoId })" />
								<div class="card-infos">
									<div class="card-description">
										<h2>@Html.DisplayFor(modelItem => item.Titulo)</h2>
									</div>
									<div class="card-price">
										<h2> @Html.DisplayFor(modelItem => item.Babycoin) BC</h2>
									</div>
									<a class="btn-editar" asp-controller="Anuncios" asp-action="MenuAnuncio" asp-route-id="@item.AnuncioId">Ver Anúncio</a>
								</div>
							</div>
						}
					</div><!--.cards-->
				</div><!--segunda-tab-->
				<div class="tab-pane fade" id="contact" role="tabpanel" aria-labelledby="contact-tab">
					<div class="cards">
						@foreach (var item in Model.Anuncios)
						{
							@if (item.InteresseTroca)
							{
								<div class="card">
										<img class="card-image" src="@Url.Action("Render", "Produtos", new { idProduto = item.ProdutoId })" />
									<div class="card-infos">
										<div class="card-description">
											<h2>@Html.DisplayFor(modelItem => item.Titulo)</h2>
										</div>
										<div class="card-price">
											<h2> @Html.DisplayFor(modelItem => item.Babycoin) BC</h2>
										</div>
										<a class="btn-editar" asp-controller="Anuncios" asp-action="MenuAnuncio" asp-route-id="@item.AnuncioId">Ver Anúncio</a>
									</div>
								</div>
							}
						}
					</div><!--.cards-->
				</div><!--terceira-tab-->
				<div class="tab-pane fade" id="cad" role="tabpanel" aria-labelledby="cad-tab">
					<div class="card-description">
						<h2 class="frase">
							Cadastre uma nova roupa e aumente suas chances de troca!<br />É fácil, só clicar no botão abaixo:
						</h2>
					</div>
					<div style='padding:10px;'>
					<a class="btn-cadastrar-produto-guarda-roupa" asp-controller="Produtos" asp-action="Create">Cadastrar Roupa</a>
					</div>
				</div><!--terceira-tab-->
			</div><!--.container-gr-->
		</div> <!--.container-->
	</div>
</main>


