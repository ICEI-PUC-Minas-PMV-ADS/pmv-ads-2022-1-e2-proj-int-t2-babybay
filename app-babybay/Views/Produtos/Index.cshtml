@model IEnumerable<app_babybay.Models.Produto>

@{
	ViewData["Title"] = "Produtos";
}

<h1>Produtos</h1>

<p>
	<a role="button" class="btn btn-primary" asp-action="Create">Cadastrar Produto</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Nome)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Cor)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Idade)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.TempoUso)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Descricao)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Tamanho)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.Categoria)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(modelItem => item.Nome)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Cor)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Idade)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.TempoUso)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Descricao)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Tamanho)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Categoria)
				</td>
				<td style="width:400px">
					<a role="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
					<a role="button" class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
					<a role="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
					<a role="button" class="btn btn-primary" asp-controller="Produtos" asp-action="CurtirProduto" asp-route-id="@item.Id">Curtir Produto</a>
					<a role="button" class="btn btn-primary" asp-controller="Produtos" asp-action="DescurtirProduto" asp-route-id="@item.Id">Tirar dos favoritos</a>
					@*  Aqui no caso,o botão alem de chamar o método para curtir,tambem passara o Id do item como argumento pelo @item.Id,fazendo que possa
				ser identfica o produto que será curtido(No caso o produto que esta "selecionado")*@
					<h3>Item @item.Id</h3>
				</td>
			</tr>
		}
	</tbody>
</table>
