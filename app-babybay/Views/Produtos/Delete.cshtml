@model app_babybay.Models.Produto

@{
    ViewData["Title"] = "Delete";
}
<link rel="stylesheet" href="~/css/excluirProduto.css">

<main>
    <div class="container-delete">
        <p class="section-c"><img src="~/img/excluirconta.jpeg" alt="excluirconta"></p>
        <br />
        <h2>Excluir Produto</h2>
        <ul>
            <li class="texto-delete">
                <hr>
               Clique no botão abaixo para excluir o produto <div class="produto">@Model.Nome</div> do seu guarda roupa

            </li>
        
            <li class="li-botao-delete">

                <form asp-action="Delete">
                    <input type="hidden" asp-for="Id" />
                    <input type="submit" value="Deletar produto" class="btn-excluir" />
                </form>
            </li>
        </ul>
        <a class="btn-voltar" asp-controller="Produtos" asp-action="MenuProduto" asp-route-id="@Model.Id">Voltar</a>
    </div>
</main>