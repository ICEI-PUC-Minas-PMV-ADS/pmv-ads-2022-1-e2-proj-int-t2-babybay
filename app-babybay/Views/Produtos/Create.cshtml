@model app_babybay.Models.Produto

@{
	ViewData["Title"] = "Cadastrar Produto";
}
<link rel="stylesheet" href="~/css/style-cadastro-produto.css">
<div class="titulo">
	<h3>Cadastro de Roupa</h3>
</div>
<hr />

<section class="section-c">
	<div class="row">
		<div class="inputs">
			<form asp-action="Create" enctype="multipart/form-data">
				<div asp-validation-summary="ModelOnly" class="text-danger"></div>
				<div class="form-group">
					<label id="foco" asp-for="Nome" class="descricao"></label>
					<input asp-for="Nome" class="input" />
					<span asp-validation-for="Nome" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Cor" class="descricao"></label>
					<input asp-for="Cor" class="input" />
					<span asp-validation-for="Cor" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Idade" class="descricao"></label>
					<input asp-for="Idade" class="input" />
					<span asp-validation-for="Idade" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="TempoUso" class="descricao"></label>
					<input asp-for="TempoUso" class="input" />
					<span asp-validation-for="TempoUso" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Descricao" class="descricao"></label>
					<input asp-for="Descricao" class="input" />
					<span asp-validation-for="Descricao" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Tamanho" class="descricao"></label>
					<input asp-for="Tamanho" class="input" />
					<span asp-validation-for="Tamanho" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Categoria" class="descricao"></label>
					<select asp-for="Categoria" class="input" asp-items="Html.GetEnumSelectList<Categoria>()"></select>
					<span asp-validation-for="Categoria" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Image.Picture" class="control-label"></label>
					<input type="file" name="Img" id="Img" class="form-control" />
					<span asp-validation-for="Image.Picture" class="text-danger"></span>
				</div>
				<div class="form-group">
					<br>
					<input type="submit" value="Cadastrar Roupa" class="btn-criar" />
				</div>

			</form>
		</div>
	</div>

	<div>
		<a class="btn-voltar" asp-controller="Usuarios" asp-action="RedirecionarMenu">Voltar</a>
	</div>
</section>

<script>
	document.getElementById("foco").focus();
</script>

@section Scripts {
	@{
		await Html.RenderPartialAsync("_ValidationScriptsPartial");
	}
	}
