@model IEnumerable<app_babybay.Models.Carteira>

@{
	ViewData["Title"] = "Minha Carteira";
	Layout = "~/Views/Shared/_Layout.cshtml";
	<link rel="shortcut icon" href="../favicon/favicon-16x16.png" type="image/x-icon">
	<link rel="stylesheet" href="~/css/CompraConfirmada.css">
}

<body>
	<main>
		<div class="div-confirmacompra">
			<h1>Confirmação de compra</h1>
		</div>
		<div class="section-c">
			<ul>
				<li>
					<img src="../img/coin.png" alt="coin">
				</li>
				<li>
					<h3>Você optou pela compra do pacote Light (3 BabyCoins por R$ 10,00). Para efetuar o pagamento, realize transferência bancária ou PIX para o seguinte destinatário:</h3>
				</li>
				<li>
					<h5>
						CNPJ: 11.111.111.0001/49 (BANCO X ou MERCADO PAGO)
						Banco: 111 - BANCO X S.A
						Agência: 11111111-1
						(BabyBay Empreendimentos)
					</h5>
				</li>
				<li>
					<h3>Após realização do pagamento, enviar comprovante para o e-mail financeiro@babybay.com para que seu saldo seja liberado em até 3 dias úteis.</h3>
				</li>
			</ul>
			<div class="retornar">
				<ul>
					<li>
						<p>
							<a asp-controller="Usuarios" asp-action="Index">Retornar</a>
						</p>
					</li>
				</ul>
			</div>
		</div>
	</main>
</body>




